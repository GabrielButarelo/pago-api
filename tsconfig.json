{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"rootDir": "src",
		"baseUrl": "src",
		"target": "es6",
		"paths": {
			"@modules/*": ["modules/*"],
			"@infra/*": ["infra/*"],
			"@shared/*": ["shared/*"]
		}
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*"
	],
}
